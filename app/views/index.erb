<div class="create">
  <form action="/survey/new">
    <input type="submit" value="Create new survey" class="bluebutton">
  </form>
</div>

<table>
  <tr class="tablehead">
    <td>Survey Name</td>
    <td>Responses</td>
  </tr>
  <% @surveys.each do |survey| %>
    <tr>
      <td><a href="/surveys/<%= survey.id %>"><%= survey.name %></a></td>
      <td><a href="/surveys/<%= survey.id %>/responses">Responses</a></td>
    </tr>
  <% end %>
</table>
